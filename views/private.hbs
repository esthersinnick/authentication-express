<h2>Private page</h2>

<p>Hello, {{currentUser.username}}</p>

<form  class="recipe-create"> <!-- el form no harÃ¡ el request porque lo manejaremos con axios, lo haremos desde js -->
  <label for="title">title</label>
  <input type="text" name="title" id="title" >
  <select name="level" id="level">
    <option value="Easy Peasy">Easy Peasy</option>
    <option value="Amateur Chef">Amateur Chef</option>
    <option value="UltraPro Chef">UltraPro Chef</option>
  </select>
  <label for="cuisine">Cuisine</label>
  <input type="text" name="cuisine" id="cuisine" >
  <label for="duration">Duration</label>
  <input type="number" name="duration" id="duration">
  <button type="submit">Add Recipe to my account</button>
</form>

<section class="recipe-list">

  {{#each recipes}}
  <article>
    <p>{{title}} - {{level}}</p>
    <button id="{{_id}}">Delete</button>
